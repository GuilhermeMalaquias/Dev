@model Dev.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar " + Model.Nome;
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">S
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label><br />
                <label><b>@Model.Fornecedor.Nome</b></label>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" cols="40" rows="5"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Imagem Atual</label><br />
                <img src="~/Produto/img/@Model.Imagem" alt="@Model.Imagem" />

            </div>
            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <div class="custom-file">
                    <input class="custom-file-input" id="ImagemUpload" type="file" asp-for="ImagemUpload" />
                    <label class="custom-file-label" for="ImagemUpload" data-browse="procurar" style="width: 400px"></label>
                    <label style="display: none" id="img_nome"></label>
                </div>
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a href="javascript:window.history.back();" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });
    </script>
}
